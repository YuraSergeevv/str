<!DOCTYPE html>
<!-- Оболочка документа -->
<html lang="ru">

<!-- Заголовок страницы, контейнер для других важных данных (не отображается) -->

<head>
    <title>Главная</title>
    <!-- Подключение CSS -->
    <link rel="stylesheet" href="css/style.css">
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
    <link rel="shortcut icon" href="img/icons/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
    <!-- ОБОЛОЧКА -->
    <div class="registration wrapper">
        <!-- @import "header.kit" -->
        <div class="authorization_wrap page">
            <div class="container">
                <div class="title">Регистрация</div>
                <div class="sponsor">
                    <span class="text">Номер спонсора: </span><span class="number">482941</span>
                </div>
                <form class="registration_block input_block" action="#">
                    <div class="row">
                        <span>Имя</span><input type="text" placeholder=" Введити имя">
                    </div>
                    <div class="row">
                        <span>Фамилия</span><input type="text" placeholder=" Введити фамилию">
                    </div>

                    <div class="row">
                        <span>Телефон</span><input type="text" placeholder=" Введити номер телефона">
                    </div>

                    <div class="row">
                        <span>E-mail</span><input type="text" placeholder=" Введити эл.адрес">
                    </div>

                    <div class="row">
                        <span>Страна</span><input class="none" type="text" placeholder=" Выберете страну">
                        <div class="select">
                            <div class="select__header">
                                <div class="select__current"><span class="default">Выберете страну</span></div>
                                <svg class="select__icon">
                                    <use xlink:href="img/svg/sprite.svg#select"></use>
                                </svg>
                            </div>
                            <div class="select__body">
                                <div class="select__item"><span>Странна-1</span></div>
                                <div class="select__item"><span>Странна-2</span></div>
                                <div class="select__item"><span>Странна-3</span></div>
                                <div class="select__item"><span>Странна-4</span></div>
                                <div class="select__item"><span>Странна-5</span></div>
                                <div class="select__item"><span>Странна-6</span></div>
                                <div class="select__item"><span>Странна-1</span></div>
                                <div class="select__item"><span>Странна-2</span></div>
                                <div class="select__item"><span>Странна-3</span></div>
                                <div class="select__item"><span>Странна-4</span></div>
                                <div class="select__item"><span>Странна-5</span></div>
                                <div class="select__item"><span>Странна-6</span></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <span>Город</span><input class="none" type="text" placeholder=" Выберете город">
                        <div class="select">
                            <div class="select__header">
                                <div class="select__current"><span class="default">Выберете город</span></div>
                                <svg class="select__icon">
                                    <use xlink:href="img/svg/sprite.svg#select"></use>
                                </svg>
                            </div>
                            <div class="select__body">
                                <div class="select__item"><span>Город-1</span></div>
                                <div class="select__item"><span>Город-2</span></div>
                                <div class="select__item"><span>Город-3</span></div>
                                <div class="select__item"><span>Город-4</span></div>
                                <div class="select__item"><span>Город-5</span></div>
                                <div class="select__item"><span>Город-6</span></div>
                                <div class="select__item"><span>Город-1</span></div>
                                <div class="select__item"><span>Город-2</span></div>
                                <div class="select__item"><span>Город-3</span></div>
                                <div class="select__item"><span>Город-4</span></div>
                                <div class="select__item"><span>Город-5</span></div>
                                <div class="select__item"><span>Город-6</span></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <span>Пароль</span><input type="password" placeholder="Придумайте пароль">
                        <svg class="registration__icon ">
                            <use xlink:href="img/svg/sprite.svg#password"></use>
                        </svg>
                    </div>

                    <div class="row">
                        <span class="login">Поавторите пароль</span><input type="password"
                            placeholder=" Повторите пароль">
                        <svg class="registration__icon ">
                            <use xlink:href="img/svg/sprite.svg#password"></use>
                        </svg>
                    </div>

                    <div class="block_btn">
                        <button type="submit" class="btn btn_1"><span>Зарегистрироваться</span></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- @import "footer.kit" -->
    </div>

    <!-- @import "popup.kit" -->
    <!-- @import "bottom.kit" -->
    <script src="https://cdn.jsdelivr.net/npm/clipboard@2.0.8/dist/clipboard.min.js"></script>
    <script>
        new ClipboardJS('.copy_link_js', {
            text: function (trigger) {
                const query = trigger.getAttribute('data-clipboard-target');
                const target = document.querySelector(query);
                setTimeout(function () {
                    alert('Link copy')
                }, 500)
                return target.getAttribute('href');
            }
        });
    </script>
</body>

</html>